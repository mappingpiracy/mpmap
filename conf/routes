# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Mapdata index method -- doesn't really return anything yet.
GET     /mapdata                    controllers.MapData.index()
GET     /mapdata/events             controllers.MapData.events(beginDate:String,endDate:String,territorialWaterStatus:String ?= "",closestCountry:String ?= "",vesselCountry:String ?= "",vesselStatus:String ?= "")
GET     /mapdata/countries          controllers.MapData.countries()

GET     /analysis/1                 controllers.Analysis.eventsOverTime()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# WebJars
GET     /webjars/*file                    controllers.WebJarAssets.at(file)